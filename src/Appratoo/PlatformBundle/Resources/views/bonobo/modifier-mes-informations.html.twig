{% extends "AppratooPlatformBundle::layout.html.twig" %}

{% block title %}Mes Informations - {{ parent() }}{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Mes informations</h1>
        </section>

        <section class="content">
            <div class="row">
                <div class="col-md-6">
                    <div class="box box-primary">

                        <div class="box-header with-border">
                            <h3 class="box-title">Modifier mes informations</h3>
                        </div>

                        <form action="{{ path('appratoo_platform_modifier_mes_informations') }}" method="post" >
                            <div class="box-body">
                                <div class="form-group">
                                    <label>Age*</label>
                                    <input type="text" name="age" class="form-control" value="{{ app.user.age }}" required />
                                </div>
                                <div class="form-group">
                                    <label>Famille*</label>
                                    <input type="text" name="famille" class="form-control" value="{{ app.user.famille }}" required />
                                </div>
                                <div class="form-group">
                                    <label>Race*</label>
                                    <input type="text" name="race" class="form-control" value="{{ app.user.race }}" required />
                                </div>
                                <div class="form-group">
                                    <label>Nourriture*</label>
                                    <input type="text" name="nourriture" class="form-control" value="{{ app.user.nourriture }}" required />
                                </div>
                            </div>

                            <div class="box-footer">
                                <input type="submit" class="btn btn-success" value="Modifier" />
                                <input type="reset" class="btn btn-warning" value="Annuler" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}