{% extends "AppratooPlatformBundle::layout.html.twig" %}

{% block title %}Mes Informations - {{ parent() }}{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Mes informations</h1>
        </section>

        <section class="content">
            <div class="row">
                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-body box-profile">
                            <h3 class="profile-username text-center">Username : {{ app.user.username }}</h3>
                            <div class="text-center">
                                <a href="{{ path('appratoo_platform_modifier_mes_informations') }}" class="btn btn-warning">Modifier mes informations</a>
                            </div>
                            <br/>
                            
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>Age</b> <a class="pull-right">{{ app.user.age }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Famille</b> <a class="pull-right">{{ app.user.famille }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Race</b> <a class="pull-right">{{ app.user.race }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Nourriture</b> <a class="pull-right">{{ app.user.nourriture }}</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </section>
    </div>
{% endblock %}